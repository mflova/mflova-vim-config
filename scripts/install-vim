#!/usr/bin/env bash
read -p "First make sure npm is installed with npm --version as press [ENTER]"
sudo apt-get install -y vim-nox silversearcher-ag
sudo apt-get update && sudo apt-get install -y exuberant-ctags
sudo apt install -y build-essential cmake vim-nox python3-dev
sudo apt install -y mono-complete golang nodejs default-jdk npm
sudo apt-get install -y exuberant-ctags
sudo apt-get install -y silversearcher-ag
sudo apt-get install -y isort
sudo apt-get install -y yapf
sudo apt-get install -y autopep8

pip install flake8
pip3 install flake8

pip install pydocstyle
pip3 install pydocstyle

pip install pylint
pip3 install pylint

pip install bandit
pip3 install bandit

pip install mypy
pip3 install mypy

pip3 install pycodestyle
pip install pydocstyle

pip install doq
pip3 install doq

# Integrated in flake8
pip install darglint
pip install flake8-pytest-style
pip install flake8-simplify
pip install flake8-fixme
pip install flake8-bugbear
pip install dlint
pip install flake8-comprehensions
pip install flake8-commas
pip install flake8-rst-docstring
pip install flake8-markdown
pip install flake8-builtins
pip install flake8-broken-line
pip install flake8-class-attributes-order

# Linters for markdown integrated in ALE vim
npm install mdl

# Linters for rst
sudo apt install python3-proselint
pip install rstcheck

# Linters for yaml
sudo apt-get install yamllint

# Linters for cmake
pip install cmakelint

# Linters for C++
sudo apt install clang-tidy
pip install cpplint
sudo apt-get install cppcheck

# Stubs
pip install pandas-stubs
pip install data-science-types
# Where mypy will read all the stubs generated
# generate them with:
# - stubgen -m module -o $MYPYPATH
# - stubgen path -o $MYPYPATH
echo "export MYPYPATH=$HOME/stubs" >> ~/.bashrc

#git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim

echo "Open VIM, ignore the errors and execute :PluginInstall"

cd ~/.vim/bundle/YouCompleteMe
python3 install.py --all
cd ~

echo "export VIMINIT='source $MYVIMRC'" >> ~/.bashrc
echo "export MYVIMRC='~/mflova-linux-setup/mflova-vim-config/cfg/.vimrc'" >> ~/.bashrc

read -p "Vim installed. Call :PluginInstall and press [ENTER]"
