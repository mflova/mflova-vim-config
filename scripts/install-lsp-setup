# Python LSP
sudo npm i -g pyright
pip install pyright
pip install -U setuptools
pip install 'python-language-server[all]'

# Python linters
pip install -U flake8-docstrings
pip install -U pydocstyle
pip install -U vulture
pip install -U mypy
pip install -U flake8
pip install -U pydocstyle
pip install -U pylint
pip install -U doq

# Integrated in flake8
pip install darglint
pip install flake8-pytest-style
pip install flake8-simplify
pip install flake8-fixme
pip install flake8-bugbear
pip install dlint
pip install flake8-comprehensions
pip install flake8-commas
pip install flake8-rst-docstring
pip install flake8-docstrings
pip install flake8-markdown
pip install flake8-builtins
pip install flake8-broken-line
pip install flake8-class-attributes-order
pip install flake8-pie
pip install pandas-vet
# Stubs (used by mypy or other linters)
pip install pandas-stubs
pip install data-science-types

# YAML LSP
sudo snap install yaml-language-server

# VIM LSP
sudo npm install -g vim-language-server
# VIM Linter
pip install vim-vint

# YAML linter
sudo apt-get install yamllint

# VIM Linter
pip install vim-vint

# MARKDOWN LSP
read -p "Install the markdown lsp with :LSPInstall (with a .md opened). Then choose ltex. The path to this server is automatically added to PATH in bashrc now"
echo "export PATH=$PATH:~/.local/share/nvim/lsp_servers/ltex" >> ~/.bashrc
# MARKDOWN Linter
sudo npm install mdl

# Shell/Bash LSP
sudo npm i -g bash-language-server
# Shell/Bash Linter
sudo apt-get install -y shellcheck

# CMAAKE LSP
pip install cmake-language-server
# Cmakelint Linter
pip install cmakelint

# C++ LSP
sudo apt install -y ccls
# C++ Linter
sudo apt-get install -y clang-tidy
pip install cpplint
sudo apt-get install cppcheck

# LUA LSP
brew install lua-language-server
# Lua Linter
sudo apt install -y lua-check

# RST LSP
pip install esbonio
# RST Linter
pip install rstcheck
pip install restructuredtext-lint

# Grammar-based linters
pip install codespell
pip install proselint
