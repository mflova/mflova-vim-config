# Python LSP
sudo npm i -g pyright
pip install -U pyright
pip install -U setuptools

# Pylsp
pip install 'python-language-server[all]'
pip install pylsp-mypy
pip install pylsp-rope

# Python linters
pip install -U pydocstyle
pip install -U vulture
pip install -U mypy
pip install -U flake8
pip install -U pydocstyle
pip install -U pylint
pip install -U doq
pip install -U pytest
pip install -U pytest-cov

# Integrated in flake8
pip install -U dlint
pip install -U pandas-vet
pip install -U darglint
pip install -U flake8-pytest-style
pip install -U flake8-simplify
pip install -U flake8-fixme
pip install -U flake8-bugbear
pip install -U flake8-docstrings
pip install -U flake8-comprehensions
pip install -U flake8-commas
pip install -U flake8-rst-docstring
pip install -U flake8-docstrings
pip install -U flake8-markdown
pip install -U flake8-builtins
pip install -U flake8-broken-line
pip install -U flake8-class-attributes-order
pip install -U flake8-pie
pip install -U flake8-mutable
pip install -U flake8-deprecated

pip install -U flake8-type-checking # Guard those imports only used by type checkers
pip install -U flake8-typing-imports # Guard "typing" imports based on Python version
pip install -U flake8-requirements # It must follows the standard structure (found in pypa/sampleproject repository, setup.py)
pip install -U flake8-implicit-str-concat
pip install -U flake8-use-fstring
# Stubs (used by mypy or other linters)
pip install -U pandas-stubs
pip install -U data-science-types
pip install -U numpy

# YAML LSP
sudo snap install yaml-language-server

# VIM LSP
sudo npm install -g vim-language-server
# VIM Linter
pip install -U vim-vint

# YAML linter
sudo apt-get install yamllint

# MARKDOWN LSP
read -p "Install the markdown lsp with :LSPInstall (with a .md opened). Then choose ltex. The path to this server is automatically added to PATH in bashrc now"
echo "export PATH=$PATH:~/.local/share/nvim/lsp_servers/ltex" >> ~/.bashrc
# MARKDOWN Linter
sudo npm install mdl

# Shell/Bash LSP
sudo npm i -g bash-language-server
# Shell/Bash Linter
sudo apt-get install -y shellcheck

# CMAAKE LSP
pip install -U cmake-language-server
# Cmakelint Linter
pip install -U cmakelint

# C++ LSP
sudo apt install -y ccls
# C++ Linter
sudo apt-get install -y clang-tidy
pip install -U cpplint
sudo apt-get install cppcheck

# LUA LSP
brew install lua-language-server
# Lua Linter
sudo apt install -y lua-check

# RST LSP
pip install -U esbonio
# RST Linter
pip install -U rstcheck
pip install -U restructuredtext-lint

# Grammar-based linters
pip install -U codespell
pip install -U proselint
