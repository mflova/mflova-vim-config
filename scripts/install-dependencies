sudo apt-get update
# Neovim modules
sudo npm install -g neovim
sudo gem install neovim

# Fonts
# Jetbrains Mono
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/JetBrains/JetBrainsMono/master/install_manual.sh)"

sudo apt-get install -y xclip
sudo apt install -y build-essential cmake python3-dev
sudo apt install -y mono-complete golang nodejs default-jdk npm
sudo apt-get install -y exuberant-ctags
sudo apt-get install -y silversearcher-ag
sudo apt-get install -y isort
sudo apt-get install -y yapf
sudo apt-get install -y autopep8
sudo apt-get install -y ripgrep
pip install --user pynvim
pip3 install --user pynvim
pip install --upgrade pynvim
pip3 install --upgrade pynvim


# Linters for rst
sudo apt install python3-proselint
pip install rstcheck

# Linters for cmake
pip install cmakelint

# Linters for C++
sudo apt install clang-tidy
pip install cpplint
sudo apt-get install cppcheck

# Where mypy will read all the stubs generated
# generate them with:
# - stubgen -m module -o $MYPYPATH
# - stubgen path -o $MYPYPATH
echo "export MYPYPATH=$HOME/stubs" >> ~/.bashrc

